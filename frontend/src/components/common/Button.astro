---
interface Props {
  text: string;
  variant?: 'primary' | 'secondary';
  onClick?: () => void;
}

const { text, variant = 'primary', onClick } = Astro.props;
---

<button 
  class={`btn btn-${variant}`}
  onClick={onClick}
>
  {text}
</button>

<style>
  .btn {
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
    transition: background-color 0.2s;
  }

  .btn-primary {
    background-color: #007bff;
    color: white;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: white;
  }

  .btn-secondary:hover {
    background-color: #545b62;
  }
</style>

